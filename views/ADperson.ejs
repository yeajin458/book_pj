<div class="table-container">
  <table class="custom-table table table-bordered table-hover text-center">
    <thead class="table-primary">
      <tr>
        <th>ID</th>
        <th>PW</th>
        <th>이름</th>
        <th>성별</th>
        <th>주소</th>
        <th>전화번호</th>
        <th>생년월일</th>
        <th>클래스</th>
        <th colspan="2">메뉴</th>
      </tr>
    </thead>
    <tbody>
      <% for (let i = 0; i < list.length; i++) { %>
        <tr>
          <td><%= list[i].loginid %></td>
          <td><%= list[i].password %></td>
          <td><%= list[i].name %></td>
          <td>
            <% if (list[i].mf === "m") { %>남자
            <% } else if (list[i].mf === "f") { %>여자
            <% } else { %>기타<% } %>
          </td>
          <td><%= list[i].address %></td>
          <td><%= list[i].tel %></td>
          <td><%= list[i].birth.toISOString().substring(0, 10)%></td>
          <td>
            <% if (list[i].class === "CST") { %><%= list[i].class %>(고객)
            <% } else if (list[i].class === "MNG") { %><%= list[i].class %>(관리자)
            <% } else if (list[i].class === "CEO") { %><%= list[i].class %>(경영자)
            <% }  %>
          </td>
          <td><a href="/admin/update?id=<%= list[i].loginid%>" >수정</a></td>
          <td><a href="/admin/delete_process?id=<%= list[i].loginid%>"  onclick="return confirm('정말로 삭제하시겠습니까?')">삭제</a></td>
        </tr>
      <% } %>
    </tbody>
  </table>

  <div class="add-button-container">
    <a href="/admin/register">
      <button class="btn btn-outline-primary btn-sm">고객 추가</button>
    </a>
  </div>
</div>
