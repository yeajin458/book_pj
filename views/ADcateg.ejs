<div class="table-container">
  <table class="custom-table table table-bordered table-hover text-center">
    <thead class="table-primary">
      <tr>
        <th>대분류코드</th>
        <th>대분류이름</th>
        <th>소분류코드</th>
        <th>소분류이름</th>
        <th colspan="2">메뉴</th>
      </tr>
    </thead>

    <tbody>

      <% for (let i = 0; i < list.length; i++) { %>
        <tr>
          <td><%= list[i].bigcon %></td>
          <td><%= list[i].bigname %></td>
          <td><%= list[i].mincon %></td>
          <td><%= list[i].minname %></td>
          
          <td><a href="/admin/updatecode/<%= list[i].bigcon%>/<%= list[i].mincon %>" >수정</a></td>
          <td><a href="/admin/codedelete_process?main=<%= list[i].bigcon%>&sub=<%= list[i].mincon %>"  onclick="return confirm('정말로 삭제하시겠습니까?')">삭제</a></td>
        </tr>
      <% } %>
    </tbody>
  </table>

  <div class="add-button-container">
    <a href="/admin/addcode">
      <button class="btn btn-outline-primary btn-sm">코드 추가</button>
    </a>
  </div>
</div>
